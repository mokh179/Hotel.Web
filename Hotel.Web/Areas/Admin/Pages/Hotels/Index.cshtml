@page
@model Hotel.Web.Areas.Admin.Pages.Hotels.IndexModel
@{
    ViewData["Title"] = "Hotels";
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link href="~/css/admin/hotels/hotels.css" rel="stylesheet" asp-append-version="true" />

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Hotels</h2>

    <form id="filters" class="d-flex align-items-center" onsubmit="return false;">
        <input id="qName" name="Search" value="@Model.Search" class="form-control me-2" placeholder="Search hotels..." />

        <select id="countryFilter" name="CountryId" class="form-select me-2" style="width:180px;">
            <option value="">All countries</option>
            @foreach (var c in Model.Countries)
            {
                <option value="@c.Id" selected="@(Model.CountryId == c.Id ? "selected" : null)">@c.Name</option>
            }
        </select>

        <select id="cityFilter" name="CityId" class="form-select me-2" style="width:180px;">
            <option value="">All cities</option>
            @foreach (var ct in Model.CitiesForSelectedCountry)
            {
                <option value="@ct.Id" selected="@(Model.CityId == ct.Id ? "selected" : null)">@ct.Name</option>
            }
        </select>

        <button id="btnSearch" class="btn btn-primary me-2">Search</button>
        <button id="btnAdd" class="btn btn-success">Add New</button>
    </form>
</div>

<div id="hotelsContainer">
    <div class="row" id="hotelsList">
        @foreach (var hotel in Model.Paged.Items)
        {
            <div class="col-md-4 mb-4 hotel-card" id="hotel_@hotel.Id">
                <div class="card h-100">
                    <img src="/images/hotels/placeholder.jpg" class="card-img-top" style="height:180px; object-fit:cover;">
                    <div class="card-body d-flex flex-column">
                        <h5>@hotel.Name</h5>
                        <p class="text-muted">@hotel.CityName (@hotel.CountryName)</p>
                        <p><strong>Email:</strong> @hotel.Email</p>
                        <p><strong>Phone:</strong> @hotel.PhoneNumber</p>
                        <p class="small text-truncate">@hotel.Description</p>

                        <div class="mt-auto d-flex gap-2">
                            <button class="btn btn-sm btn-info btn-details" data-id="@hotel.Id">Details</button>
                            <button class="btn btn-sm btn-warning btn-edit" data-id="@hotel.Id">Edit</button>
                            <button class="btn btn-sm btn-danger btn-delete" data-id="@hotel.Id">Delete</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <nav>
        <ul class="pagination" id="pager">
            @if (Model.Paged.TotalPages > 1)
            {
                <li class="page-item @(Model.Paged.Page == 1 ? "disabled" : "")">
                    <a class="page-link" data-page="@(Model.Paged.Page - 1)">Previous</a>
                </li>

                @for (int i = 1; i <= Model.Paged.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.Paged.Page ? "active" : "")">
                        <a class="page-link" data-page="@i">@i</a>
                    </li>
                }

                <li class="page-item @(Model.Paged.Page == Model.Paged.TotalPages ? "disabled" : "")">
                    <a class="page-link" data-page="@(Model.Paged.Page + 1)">Next</a>
                </li>
            }
        </ul>
    </nav>
</div>

<!-- Modal -->
<div class="modal fade" id="hotelModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content" id="hotelModalContent"></div>
    </div>
</div>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

<script>

    const modalEl = document.getElementById("hotelModal");
    let modalInstance = new bootstrap.Modal(modalEl);

    const getToken = () => document.querySelector('input[name="__RequestVerificationToken"]')?.value ?? '';

    async function fetchJson(url, opts = {}) {
        const r = await fetch(url, { credentials: "same-origin", ...opts });
        const txt = await r.text();
        try { return JSON.parse(txt); } catch { return txt; }
    }

    // =============== Load Cities Filter ===============
    document.getElementById("countryFilter").addEventListener("change", async function () {
        const cid = this.value;
        const citySel = document.getElementById("cityFilter");
        citySel.innerHTML = `<option>Loading...</option>`;
        const list = await fetchJson(`?handler=Cities&countryId=${cid}`);
        citySel.innerHTML = `<option value="">All cities</option>`;
        list.forEach(c => citySel.innerHTML += `<option value="${c.id}">${c.name}</option>`);
    });

    // ======= Load cities inside modal (Create/Edit) =======
    async function loadCitiesInsideModal(countryId, selector) {
        const sel = document.querySelector(selector);
        sel.innerHTML = `<option>Loading...</option>`;
        const list = await fetchJson(`?handler=Cities&countryId=${countryId}`);
        sel.innerHTML = `<option value="">Choose city</option>`;
        list.forEach(c => sel.innerHTML += `<option value="${c.id}">${c.name}</option>`);
    }

    // =============== Create Hotel Card ===============
    function createCard(h) {
        const id = h.id ?? h.Id;
        return `
            <div class="col-md-4 mb-4 hotel-card" id="hotel_${id}">
                <div class="card h-100">
                    <img src="/images/hotels/placeholder.jpg" class="card-img-top" style="height:180px;object-fit:cover">
                    <div class="card-body d-flex flex-column">
                        <h5>${h.name}</h5>
                        <p class="text-muted">${h.cityName} (${h.countryName})</p>
                        <p><strong>Email:</strong> ${h.email ?? ""}</p>
                        <p><strong>Phone:</strong> ${h.phoneNumber ?? ""}</p>
                        <p class="small text-truncate">${h.description ?? ""}</p>

                        <div class="mt-auto d-flex gap-2">
                            <button class="btn btn-sm btn-info btn-details" data-id="${id}">Details</button>
                            <button class="btn btn-sm btn-warning btn-edit" data-id="${id}">Edit</button>
                            <button class="btn btn-sm btn-danger btn-delete" data-id="${id}">Delete</button>
                        </div>
                    </div>
                </div>
            </div>`;
    }

    // =============== Attach Events To Cards ===============
    function attachCardEvents() {

        // EDIT
        document.querySelectorAll(".btn-edit").forEach(btn => {
            btn.onclick = async () => {
                const html = await fetchJson(`?handler=EditPartial&id=${btn.dataset.id}`);
                document.getElementById("hotelModalContent").innerHTML = html;
                modalInstance.show();
                bindModalForm();
            };
        });

        // DETAILS
        document.querySelectorAll(".btn-details").forEach(btn => {
            btn.onclick = async () => {
                const html = await fetchJson(`?handler=DetailsPartial&id=${btn.dataset.id}`);
                document.getElementById("hotelModalContent").innerHTML = html;
                modalInstance.show();
            };
        });

        // DELETE
        document.querySelectorAll(".btn-delete").forEach(btn => {
            btn.onclick = async () => {
                if (!confirm("Delete this hotel?")) return;

                const fd = new FormData();
                fd.append("id", btn.dataset.id);
                fd.append("__RequestVerificationToken", getToken());

                const res = await fetchJson(`?handler=DeleteAjax`, { method: "POST", body: fd });

                if (res.success) {
                    document.getElementById(`hotel_${btn.dataset.id}`).remove();
                }
            };
        });
    }

    attachCardEvents();

    // =============== Bind Modal Create/Edit form ===============
    function bindModalForm() {
        const form = document.querySelector("#hotelModalContent form");
        if (!form) return;

        const c = form.querySelector('[name="CountryId"]');
        const ct = form.querySelector('[name="CityId"]');

        if (c && ct) {
            c.addEventListener("change", () =>
                loadCitiesInsideModal(c.value, '[name="CityId"]'));
        }

        form.addEventListener("submit", async (e) => {
            e.preventDefault();

            const fd = new FormData(form);
            fd.append("__RequestVerificationToken", getToken());

            const handler = form.dataset.handler;

            const res = await fetchJson(`?handler=${handler}`, { method: "POST", body: fd });

            if (!res.success) {
                form.querySelector(".modal-errors").innerHTML =
                    (res.errors || ["Form error"]).join("<br>");
                return;
            }

            const h = res.hotel;

            if (handler === "CreateAjax") {
                hotelsList.insertAdjacentHTML("afterbegin", createCard(h));
            } else {
                document.getElementById(`hotel_${h.id}`).outerHTML = createCard(h);
            }

            attachCardEvents();
            modalInstance.hide();
        });
    }

    // =============== Search + Pagination ===============
    async function loadHotelsAjax(page) {

        const res = await fetchJson(`?handler=SearchAjax&Search=${qName.value}&CountryId=${countryFilter.value}&CityId=${cityFilter.value}&Page=${page}`);

        hotelsList.innerHTML = "";
        res.items.forEach(h => hotelsList.insertAdjacentHTML("beforeend", createCard(h)));

        attachCardEvents();

        // Update cities after search
        if (countryFilter.value) {
            await loadCitiesInsideModal(countryFilter.value, "#cityFilter");
            document.getElementById("cityFilter").value = cityFilter.value;
        }
    }

    document.getElementById("btnSearch").onclick = () => loadHotelsAjax(1);

    document.getElementById("pager")?.addEventListener("click", e => {
        const a = e.target.closest("a[data-page]");
        if (a) loadHotelsAjax(parseInt(a.dataset.page));
    });

    // =============== Create button ===============
    document.getElementById("btnAdd").onclick = async () => {
        const html = await fetchJson(`?handler=CreatePartial`);
        document.getElementById("hotelModalContent").innerHTML = html;
        modalInstance.show();
        bindModalForm();
    };

</script>
