@page
@model Hotel.Web.Areas.Admin.Pages.Locations.CountriesModel
@{
    ViewData["Title"] = "Countries";
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link href="~/css/admin/locations/countries.css" asp-append-version="true" rel="stylesheet" />

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Countries</h2>

    <button class="btn btn-success btnAdd" data-bs-toggle="modal" data-bs-target="#countryModal">
        Add Country
    </button>
</div>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th style="width:70%">Name</th>
            <th style="width:30%">Actions</th>
        </tr>
    </thead>
    <tbody id="countriesList">
        @foreach (var c in Model.Countries)
        {
            <tr id="country_@c.Id">
                <td>@c.Name</td>
                <td>
                    <button class="btn btn-warning btn-sm btn-edit" data-id="@c.Id">Edit</button>
                    <button class="btn btn-danger btn-sm btn-delete" data-id="@c.Id">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="countryModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="countryForm">
                @Html.AntiForgeryToken()

                <div class="modal-header">
                    <h5 class="modal-title" id="countryModalLabel">Add Country</h5>
                    <button class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <input type="hidden" id="Input_Id" name="Id" />

                    <div class="mb-3">
                        <label class="form-label">Country Name</label>
                        <input id="Input_Name" name="Name" class="form-control" required />
                    </div>

                    <div id="modalErrors" class="text-danger"></div>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button id="modalSave" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

<script>

    /* -------------------- Helpers -------------------- */

    async function getJson(url) {
        const res = await fetch(url);
        return await res.json();
    }

    function normalize(c) {
        // تحويل PascalCase → camelCase لو السيرفر بيرجع PascalCase
        return {
            id: c.id ?? c.Id,
            name: c.name ?? c.Name
        };
    }

    function rowTemplate(c) {
        return `
                <tr id="country_${c.id}">
                    <td>${c.name}</td>
                    <td>
                        <button class="btn btn-warning btn-sm btn-edit" data-id="${c.id}">Edit</button>
                        <button class="btn btn-danger btn-sm btn-delete" data-id="${c.id}">Delete</button>
                    </td>
                </tr>`;
    }

    function addRow(c) {
        document.getElementById("countriesList")
            .insertAdjacentHTML("afterbegin", rowTemplate(c));
        bindEvents();
    }

    function updateRow(c) {
        const row = document.getElementById("country_" + c.id);
        if (row) row.outerHTML = rowTemplate(c);
        bindEvents();
    }

    function deleteRow(id) {
        document.getElementById("country_" + id)?.remove();
    }

    /* -------------------- Bind Buttons -------------------- */

    function bindEvents() {

        document.querySelectorAll(".btn-edit").forEach(btn => {
            btn.onclick = async () => {

                const id = btn.dataset.id;
                const c = normalize(await getJson(`?handler=Country&id=${id}`));

                document.getElementById("Input_Id").value = c.id;
                document.getElementById("Input_Name").value = c.name;

                document.getElementById("modalErrors").innerHTML = "";
                document.getElementById("countryModalLabel").innerText = "Edit Country";

                new bootstrap.Modal(document.getElementById("countryModal")).show();
            };
        });

        document.querySelectorAll(".btn-delete").forEach(btn => {
            btn.onclick = async () => {

                if (!confirm("Are you sure you want to delete this country?"))
                    return;

                const id = btn.dataset.id;

                const fd = new FormData();
                fd.append("id", id);

                const res = await fetch(`?handler=DeleteAjax`, {
                    method: "POST",
                    body: fd
                });

                const data = await res.json();

                if (data.success)
                    deleteRow(id);
            };
        });
    }

    bindEvents();


    /* -------------------- Add button -------------------- */

    document.querySelector(".btnAdd").onclick = () => {
        document.getElementById("countryForm").reset();
        document.getElementById("Input_Id").value = "";
        document.getElementById("countryModalLabel").innerText = "Add Country";
        document.getElementById("modalErrors").innerHTML = "";
    };


    /* -------------------- Submit -------------------- */

    document.getElementById("countryForm").addEventListener("submit", async e => {

        e.preventDefault();

        const id = document.getElementById("Input_Id").value;
        const fd = new FormData(e.target);
        const handler = id ? "EditAjax" : "CreateAjax";

        const res = await fetch(`?handler=${handler}`, {
            method: "POST",
            body: fd
        });

        const data = await res.json();

        if (!data.success) {
            document.getElementById("modalErrors").innerHTML =
                (data.errors || ["Server error"]).join("<br>");
            return;
        }

        const c = normalize(data.country);

        if (id)
            updateRow(c);
        else
            addRow(c);

        bootstrap.Modal.getInstance(document.getElementById("countryModal")).hide();
    });


    /* -------------------- Fix Bootstrap Backdrop -------------------- */

    document.addEventListener("hidden.bs.modal", function () {
        document.querySelectorAll(".modal-backdrop")
            .forEach(el => el.remove());
    });

</script>
