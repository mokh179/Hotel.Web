@page
@model Hotel.Web.Areas.Account.Pages.ForgotPasswordModel
<link rel="stylesheet" href="~/css/ForgotPass.css" asp-append-version="true" />

@{
    ViewData["Title"] = "Forgot Password";
    Layout = "/Pages/Shared/_Layout.cshtml";
}


<div class="forgot-container">

    <div class="forgot-box">
        <h2 class="forgot-title">Forgot Password</h2>

        <p class="forgot-subtitle">
            Enter your email to receive a password reset link.
        </p>

        <form method="post">

            <div class="form-group mb-3">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control forgot-input" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <button type="submit" class="btn forgot-btn w-100">
                Send Reset Link
            </button>

        </form>

        <div class="forgot-links mt-3">
            <a asp-area="Account" asp-page="/Login">Back to Login</a>
        </div>

        @if (TempData["Success"] != null)
        {
            <p class="success-message">@TempData["Success"]</p>
        }
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
