@page
@model Hotel.Web.Areas.User.Pages.Profile.ChangePasswordModel
@{
    Layout = "/Areas/User/Pages/_UserLayout.cshtml";
}
<link rel="stylesheet" href="~/css/User/profile.css" />

<h2 class="profile-title">Change Password</h2>

<div class="profile-container">

    <form method="post">

        <div class="form-group mb-3">
            <label>Current Password</label>
            <input asp-for="PasswordModel.CurrentPassword" class="form-control" type="password" />
        </div>

        <div class="form-group mb-3">
            <label>New Password</label>
            <input asp-for="PasswordModel.NewPassword" class="form-control" type="password" />
        </div>

        <div class="form-group mb-3">
            <label>Confirm Password</label>
            <input asp-for="PasswordModel.ConfirmPassword" class="form-control" type="password" />
        </div>

        <button class="btn-save">Update Password</button>

        <a asp-area="User" asp-page="/Profile/Index" class="btn-cancel">
            Cancel
        </a>

    </form>

    @if (TempData["Success"] != null)
    {
        <p class="success-message">@TempData["Success"]</p>
    }

    @foreach (var error in ViewContext.ModelState.Values.SelectMany(v => v.Errors))
    {
        <p class="error-message">@error.ErrorMessage</p>
    }

</div>
